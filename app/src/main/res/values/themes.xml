<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Projekt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item> <!-- Ustawia kolor podstawowy na biały -->
        <item name="colorOnPrimary">@color/black</item> <!-- Ustawia kolor tekstu na czarny na tle podstawowym -->
        <item name="colorSecondary">@color/light_blue</item> <!-- Ustawia kolor drugorzdny na jasnoniebieski -->
        <item name="colorOnSecondary">@color/black</item> <!-- Ustawia kolor tekstu na czarny na tle drugorzędnym -->
        <item name="android:navigationBarColor">@color/navbar</item> <!-- Ustawia kolor paska nawigacyjnego na kolor zdefiniowany jako navbar -->
        <item name="android:statusBarColor">@color/dark_tab</item> <!-- Ustawia kolor paska stanu na kolor zdefiniowany jako dark_tab -->
    </style>

    <style name="Theme.Projekt" parent="Base.Theme.Projekt" />

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card">
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="Navbar">
        <item name="android:background">@color/navbar</item>
    </style>

    <style name="profile_pic">
        <item name="android:src">@drawable/ic_profilepic</item>
    </style>

    <style name="Text_white">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Background_Color">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="back_button">
        <item name="android:src">@drawable/ic_back_btn</item>
    </style>

    <style name="settings_button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="progressBar">
        <item name="android:indeterminateTint">@color/grey</item>
    </style>
    
    <style name="settings_icon">
        <item name="android:src">@drawable/ic_settings</item>
    </style>
    
    <style name="quiz_card">
        <item name="android:background">@drawable/round_back_white10</item>
    </style>

    <style name="qestions">
        <item name="android:background">@drawable/round_back_white10</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="timer">
        <item name="android:src">@drawable/ic_timer</item>
    </style>

    <style name="phone">
        <item name="android:src">@drawable/ic_phone</item>
    </style>

    <style name="sms">
        <item name="android:src">@drawable/ic_sms</item>
    </style>

    <style name="question_button">
        <item name="android:background">@drawable/round_back_white_stroke2_10</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="questions_tab">
        <item name="android:background">@drawable/round_back_light_beige0</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>